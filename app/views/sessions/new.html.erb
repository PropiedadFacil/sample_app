<% provide(:title, "Log in") %>
<div class="container-content-middle">
  <%= form_for(:session, url: login_path, html: {:class => 'm-x-auto text-center app-login-form'}) do |f| %>
    <%= link_to image_tag('FatCamp-logo.png', alt: 'Brand'), root_path, class: 'app-brand m-b-md' %>
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', placeholder: "Username" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
    </div>
    <%= f.label :remember_me, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span>Remember me on this computer</span>
    <% end %>
    <div class="m-b-lg">
      <%= f.submit "Log in", class: "btn btn-primary" %>
      <%= link_to "Sign up", signup_path, class: 'btn btn-default' %>
    </div>
    <footer class="screen-login">
      <%= link_to "Forgot password", new_password_reset_path, class: 'text-muted' %>
    </footer>
  <% end %>
</div>